<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.abano.quizyourbrain.Mcq.McqFragment">

    <!--<ProgressBar-->
    <!--style="?android:attr/progressBarStyleHorizontal"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginBottom="15dp"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/textBgColor"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/question_number"
                android:textColor="@color/textFgColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/category"
                android:textColor="@color/textFgColor"
                android:textSize="16sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/main_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_question"
            android:textColor="@color/mainQuestionColor"
            android:textSize="28sp" />

    </LinearLayout>

    <Button
        android:id="@+id/answer1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttonshape"
        android:text="@string/ans1"
        android:textColor="@color/textBgColor"
        android:textSize="20sp"
        android:layout_weight="0.2"
        />
    <Button
        android:id="@+id/answer2"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/buttonshape"
        android:text="@string/ans1"
        android:textColor="@color/textBgColor"
        android:textSize="20sp"
        android:layout_weight="0.2"
        />
    <Button
        android:id="@+id/answer3"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/buttonshape"
        android:text="@string/ans1"
        android:textColor="@color/textBgColor"
        android:textSize="20sp"
        android:layout_weight="0.2"
        />
    <Button
        android:id="@+id/answer4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttonshape"
        android:text="@string/ans1"
        android:textColor="@color/textBgColor"
        android:textSize="20sp"
        android:layout_weight="0.2"
        />





</LinearLayout>

